{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "name": "Launch Feophant",
      "request": "launch",
      "cargo": {
        "args": [
          "build",
          "--bin=feophant-server"
        ]
      },
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "sourceLanguages": [
        "rust"
      ],
      "sourceMap": {
        "/rustc/*": "${env:HOME}/.rustup/toolchains/stable-aarch64-apple-darwin/lib/rustlib/src/rust"
      },
    },
  ]
}