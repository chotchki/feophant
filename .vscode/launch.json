{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch",
            "args": [],
            "program": "${workspaceFolder}/target/debug/rusty-elephant",
            "windows": {
                "program": "${workspaceFolder}/target/debug/rusty-elephant.exe"
            },
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "sourceLanguages": ["rust"],
            "sourceMap": {
              "/rustc/*": "${env:USERPROFILE}/.rustup/toolchains/stable-x86_64-pc-windows-msvc/lib/rustlib/src/rust"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rusty-elephant'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rusty-elephant",
                    "--package=rusty-elephant"
                ],
                "filter": {
                    "name": "rusty-elephant",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rusty-elephant'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rusty-elephant",
                    "--package=rusty-elephant"
                ],
                "filter": {
                    "name": "rusty-elephant",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}